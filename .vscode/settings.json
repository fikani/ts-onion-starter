{
    "auto-run-command.rules": [
        {
            "condition": "hasFile: wallaby.js",
            "command": "wallaby.start",
            "message": "Running wallaby"
        }
    ],
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "node_modules": true,
        "dist": true
    },
    "editor.codeActionsOnSave": {
        "source.organizeImports": true
    }
}